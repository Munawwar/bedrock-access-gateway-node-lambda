{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["esnext"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.js", "../tests/*.test.js"],
  "exclude": ["node_modules"]
} 